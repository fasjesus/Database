<!-- views/comentarios.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Tour: Agência de Viagens</title>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #fff;
        }
    
        .main {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            margin-top: 50px;
        }
    
        .title {
            font-weight: 700;
            font-size: 50px;
        }

        .mb-3 {
            display: flex;
            flex-direction: column;
            width: 50em;
            height: auto;
            padding: 50px;
            border-radius: 10px;
            margin-bottom: 50px;
            background-color: #f5f5f5;
        }

        .comment {
            display: flex;
            flex-direction: column;
            border-radius: 10px;
            margin-bottom: 30px;
        }

        form {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 30px;
            margin-top: 20px;
            border-radius: 10px;
            background-color: #c4c4c4;
        }

        form label {
            font-size: 20px;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .text {
            width: 600px;
            height: 250px;
            margin-bottom: 20px;
            border-radius: 10px;
            padding: 10px;
            font-size: 18px;
        }
        
        .comment {
            display: flex;
            flex-direction: column;
            padding: 20px;
            border-radius: 10px;
            background-color: #c4c4c4;
        }

        .header {
            font-size: 14px;
            margin-bottom: 3px;
        }

        .header span {
            font-size: 20px;
            font-weight: 700;
        }

        .body {
            margin-top: 5px;
            font-size: 18px;
        }

        .post {
            background-color: #52e970;
            border-color: #52e970;
        }

        .post:hover {
            background-color: #0f0;
            border-color: #0f0;
        }

    </style>
</head>
<body>
    <div class="main">
        <div class="title">
            <h1>Comentários</h1>
        </div>

        <div class="mb-3">
            <% comentarios.forEach(comentario => { %>
            <div class="comment">
                <div class="header">
                    <span><%= comentario.user_name %></span> <%= comentario.data_comentario%>
                </div>
                <div class="body">
                    <%= comentario.comentario %>
                </div>
            </div>
            <% }); %>
    
    
            <!-- Formulário para inserir um novo comentário -->
            <form action="/postar_comentario/<%= id_pacote %>" method="post">
                <input type="hidden" name="id_pacote" value="<%= id_pacote %>">
                <label for="comentario">Novo Comentário:</label>
                <textarea class="text" id="comentario" name="comentario" placeholder="Digite seu comentário"></textarea>
                <button type="submit" class="btn btn-primary post">Postar</button>
            </form>
        </div>
        
        <button type="button" class="btn btn-primary" id="back">Voltar</button>
    </div>
    

    <script>
        const back = document.getElementById('back');
        back.addEventListener('click', () => {
            window.location.href = '/lista';
        });
    </script>
</body>
</html>